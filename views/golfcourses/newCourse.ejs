<% include ../partials/navbar %>

<div class="row">
        <div class="container">
            <h2>Create a new Campground</h2>
            <div class="formWrapper">
                <form action="/golfcourses" method="POST">
                    <div class="form-group">
                        <input class='form-control' type="text" name="name" placeholder="Course Name">
                    </div>
                    <div class="form-group">
                        <input class='form-control' name="description" type="text" placeholder="Course Description">
                    </div>
                    <div class="form-group">
                        <input class='form-control' name="location" type="text" placeholder="Location">
                    </div>
                    <div class="form-group">
                        <input class='form-control' name="phoneNumber" type="text" placeholder="(XXX) XXX-XXXX">
                    </div>
                    <div class="form-group">
                        <input class='form-control' name="image" type="text" placeholder="Image URL">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-lg btn-block" type="submit">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <% include ../partials/footer %>