<% include partials/navbar %>
    <div class="container">
        <div class="jumbotron">
            <h1>Welcome to GolfChamp</h1>
            <p>view list of personally experienced golf courses</p>
            <a class="btn btn-primary btn-sm" href='/golfcourses/new'>Add Golf Course</a>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <% golfcourses.forEach(place => { %>
                <div class="col-sm-12 col-md-6 col-lg-6 col-xl-4">
                    <div class="img-thumbnail">
                        <div class='imgDiv'>
                            <img class='courseImg' src="<%= place.image %>" alt="">
                        </div>
                        <div class='caption courseDiv'>
                            <%= place.name %>
                        </div>
                        <a href="/golfcourses/<%= place._id %>" class="btn btn-small btn-primary">More Info</a>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>

    <% include partials/footer %>